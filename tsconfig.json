{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["./src/*"]
    },
    "typeRoots": ["./types"],
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": ["src", "**/*.ts"],
  "exclude": [".vscode", "node_modules", "dist"],
  "types": ["./types/*"]
}
