{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES6",
    "types": ["node"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "typeRoots": ["src/types"],
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./__tests__"]
}
